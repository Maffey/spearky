#:kivy 1.11.1

<MainMenu>
    BoxLayout:
        detection: detection_button
        escalation: escalation_button
        penetration: penetration_button

        size: root.width, root.height
        orientation: "vertical"
        spacing: 32
        padding: (200, 60)
        Button:
            id: detection_button
            text: "detection"
        Button:
            id: escalation_button
            text: "escalation"
        Button:
            id: penetration_button
            text: "penetration"

<ChangeMAC>
    size: 500, 40
    BoxLayout:
        size: root.width, root.height
        orientation: "horizontal"
        Label:
            text: "MAC address:"
        TextInput:
            hint_text: "00:a1:b2:c3:d4:d5:"
            multiline: False