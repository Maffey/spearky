#:kivy 1.11.1

# Root widget of the app.
WindowManager:
    MainMenuScreen:
    ChangeMACScreen:

<MainMenuScreen>:
    name: "main_menu_screen"

    # TODO: change how the buttons are layered out or the type of Layout.
    BoxLayout:
        orientation: "vertical"
        spacing: root.height / 5
        padding: 50

        Button:
            pos_hint: {"center_x": 0.5}
            size_hint_x: 0.5
            text: "Detection Tools"

        Button:
            pos_hint: {"center_x": 0.5}
            size_hint_x: 0.5
            text: "Escalation Tools"

        Button:
            pos_hint: {"center_x": 0.5}
            size_hint_x: 0.5
            text: "Penetration Tools"
            on_release: app.root.current = "change_mac_screen"

<ChangeMACScreen>:
    name: "change_mac_screen"
    mac_input: mac_text_input

    size: 500, 40

    # TODO: change how the widgets are layered out or the type of Layout.
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"

            Label:
                text: "MAC address:"

            TextInput:
                id: mac_text_input
                hint_text: "00:a1:b2:c3:d4:d5:"
                multiline: False

        Button:
            id: submit_mac_button
            text: "Submit"
            on_release: root.submit_mac()