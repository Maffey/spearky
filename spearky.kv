#:kivy 1.11.1

# Root widget of the app.
WindowManager:
    MainMenuScreen:
    ChangeMACScreen:

<MainMenuScreen>:
    name: "main_menu_screen"
    BoxLayout:

        size: root.width, root.height
        orientation: "vertical"
        spacing: 100
        padding: (250, 100)

        Button:
            text: "detection"

        Button:
            text: "escalation"

        Button:
            text: "penetration"
            on_release: app.root.current = "change_mac_screen"

<ChangeMACScreen>:
    name: "change_mac_screen"
    mac_input: mac_text_input
    size: 500, 40

    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"

        BoxLayout:
            orientation: "horizontal"

            Label:
                text: "MAC address:"

            TextInput:
                id: mac_text_input
                hint_text: "00:a1:b2:c3:d4:d5:"
                multiline: False

        Button:
            id: submit_mac_button
            text: "Submit"
            on_release: root.submit_mac()